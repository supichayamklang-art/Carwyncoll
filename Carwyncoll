    <script>
        // ==========================================
        // CONFIGURATION DATA
        // ==========================================
        
        const categories = [
            { id: 'cat1', name: '‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á & ‡∏õ‡∏•‡πà‡∏≠‡∏¢‡πÄ‡∏≠‡∏ü', color: 'bg-pink-100', text: 'text-pink-600' },
            { id: 'cat2', name: '‡∏Å‡∏•‡∏∏‡πà‡∏°‡∏£‡∏ß‡∏°', color: 'bg-blue-100', text: 'text-blue-600' },
            { id: 'cat3', name: '‡∏Å‡∏•‡∏∏‡πà‡∏° BOX', color: 'bg-green-100', text: 'text-green-600' },
            { id: 'cat4', name: '‡∏Å‡∏•‡∏∏‡πà‡∏°‡∏ï‡∏±‡∏ß‡∏ï‡∏π‡∏ô', color: 'bg-yellow-100', text: 'text-yellow-700' },
            { id: 'cat5', name: '‡∏Å‡∏•‡∏∏‡πà‡∏°‡∏•‡∏≤‡∏¢‡πÄ‡∏™‡πâ‡∏ô', color: 'bg-purple-100', text: 'text-purple-600' },
            { id: 'cat6', name: '‡∏Å‡∏•‡∏∏‡πà‡∏°‡∏ü‡πâ‡∏≠‡∏ô‡∏ï‡πå', color: 'bg-red-100', text: 'text-red-600' },
            { id: 'cat7', name: '‡∏Å‡∏•‡∏∏‡πà‡∏°‡∏ï‡∏∏‡πâ‡∏á‡∏ï‡∏¥‡πâ‡∏á', color: 'bg-orange-100', text: 'text-orange-600' },
            { id: 'cat8', name: '‡∏Å‡∏•‡∏∏‡πà‡∏°‡∏ä‡∏¥‡πâ‡∏ô‡∏™‡πà‡∏ß‡∏ô BOX', color: 'bg-gray-100', text: 'text-gray-600' }
        ];

        // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡πà‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á URL ‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡∏à‡∏≥‡∏•‡∏≠‡∏á (‡πÉ‡∏ä‡πâ‡∏™‡∏µ‡∏û‡∏≤‡∏™‡πÄ‡∏ó‡∏•)
        function getPlaceholderImage(categoryIndex, itemIndex) {
            // Palette ‡∏™‡∏µ‡∏û‡∏≤‡∏™‡πÄ‡∏ó‡∏•
            const colors = ['ffb7b2', 'b5ead7', 'c7ceea', 'ffdac1', 'e2f0cb', 'ff9aa2', 'e0bbe4', '957dad'];
            const bgColor = colors[(categoryIndex + itemIndex) % colors.length];
            // ‡πÉ‡∏ä‡πâ‡∏ö‡∏£‡∏¥‡∏Å‡∏≤‡∏£‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û placeholder
            return `https://placehold.co/600x600/${bgColor}/ffffff?text=Item+${itemIndex + 1}`;
        }

        // ==========================================
        // SYSTEM LOGIC
        // ==========================================

        const navContainer = document.getElementById('category-nav');
        const portfolioContainer = document.getElementById('portfolio-container');

        // 1. Generate Navigation Buttons
        categories.forEach((cat) => {
            const btn = document.createElement('a');
            btn.href = `#${cat.id}`;
            btn.className = `nav-pill inline-block px-5 py-2 mx-1 rounded-full text-gray-600 font-medium cursor-pointer ${cat.color} hover:shadow-md border border-transparent hover:border-white/50`;
            btn.innerText = cat.name;
            
            // Event Listener for Smooth Scroll handled by CSS, but added here for tracking active state logic if needed
            btn.addEventListener('click', (e) => {
                // Optional: Manual active state handling logic could go here
            });
            
            navContainer.appendChild(btn);
        });

        // 2. Generate Content Grid
        categories.forEach((cat, catIndex) => {
            // ‡∏™‡∏£‡πâ‡∏≤‡∏á Section Container
            const section = document.createElement('section');
            section.id = cat.id;
            section.className = "mb-24 pt-4 reveal"; 

            // ‡∏™‡∏£‡πâ‡∏≤‡∏á Header ‡∏Ç‡∏≠‡∏á‡πÅ‡∏ï‡πà‡∏•‡∏∞‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà
            const header = document.createElement('div');
            header.className = "flex items-center mb-8 border-b border-dashed border-gray-200 pb-4";
            header.innerHTML = `
                <div class="w-3 h-10 ${cat.color.replace('bg-', 'bg-')} mr-4 rounded-full shadow-sm"></div>
                <h2 class="text-2xl md:text-3xl font-bold text-gray-700">
                    ${cat.name} 
                    <span class="text-sm font-normal text-gray-400 ml-2">(9 items)</span>
                </h2>
            `;
            section.appendChild(header);

            // ‡∏™‡∏£‡πâ‡∏≤‡∏á Grid Container
            const grid = document.createElement('div');
            grid.className = "grid grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-6";

            // ‡∏™‡∏£‡πâ‡∏≤‡∏á Cards (9 ‡πÉ‡∏ö‡∏ï‡πà‡∏≠‡∏´‡∏°‡∏ß‡∏î)
            for (let i = 0; i < 9; i++) {
                const card = document.createElement('div');
                card.className = "work-card group";
                
                const imgSrc = getPlaceholderImage(catIndex, i);
                
                card.innerHTML = `
                    <img src="${imgSrc}" alt="${cat.name} ${i+1}" loading="lazy">
                    <div class="card-overlay">
                        <div class="mb-3 p-3 bg-white rounded-full shadow-sm">
                             <i class="fas fa-image ${cat.text} text-xl"></i>
                        </div>
                        <h3 class="text-lg font-bold text-gray-700 mb-1">Code: ${cat.id}-${i+1}</h3>
                        <p class="text-gray-500 text-xs mb-3 font-light">Available for selection</p>
                        <a href="https://drive.google.com" target="_blank" class="view-btn">
                            <i class="fas fa-eye mr-2"></i> ‡∏î‡∏π‡∏£‡∏π‡∏õ‡πÄ‡∏ï‡πá‡∏°
                        </a>
                    </div>
                `;
                grid.appendChild(card);
            }

            section.appendChild(grid);
            portfolioContainer.appendChild(section);
        });

        // 3. Scroll Reveal Animation Logic
        const revealElements = document.querySelectorAll('.reveal');

        const revealOnScroll = () => {
            const windowHeight = window.innerHeight;
            const elementVisible = 100;

            revealElements.forEach((reveal) => {
                const elementTop = reveal.getBoundingClientRect().top;
                if (elementTop < windowHeight - elementVisible) {
                    reveal.classList.add('active');
                }
            });
        };

        window.addEventListener('scroll', revealOnScroll);
        // Trigger once on load
        revealOnScroll();

    </script>
</body>
